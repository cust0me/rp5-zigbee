@using RP5.Web.Models
@if(_startDate is null || _endDate is null)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <p>Loading chart data...</p>
    </div>
    return;
}

<div class="container">
    <div class="row justify-content-center mb-4">
        <div class="col-md-3">
            <label>Select Device:</label>
            <select class="form-control" @onchange="DeviceChangedCallback">
                @foreach(string device in Devices ?? [])
                {
                    <option value="@device">@device</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label>Start Date:</label>
            <input type="date" name="StartDate" class="form-control" @onchange="StartChangedCallback" value="@(_startDate.Value.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-md-3">
            <label>End Date:</label>
            <input type="date" name="EndDate" class="form-control" @onchange="EndChangedCallback" value="@(_endDate.Value.ToString("yyyy-MM-dd"))" />
        </div>
    </div>
</div>

<div class="wrapper">
    <SfChart Title="Temperature C">
        <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.DateTime" Format="@DateTimeFormat" EdgeLabelPlacement="EdgeLabelPlacement.Shift">
            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
        </ChartPrimaryXAxis>

        <ChartPrimaryYAxis Minimum="@MinTemp" Maximum="@MaxTemp" Interval="2" EdgeLabelPlacement="EdgeLabelPlacement.Shift" LabelFormat="{value} C" />

        <ChartSeriesCollection>
            <ChartSeries DataSource="@FilteredTelemetryData" XName="Time" YName="Temperature" Type="ChartSeriesType.Line">
                <ChartMarker Visible="true" Height="3" Width="3" IsFilled="true" Shape="ChartShape.Circle" />
            </ChartSeries>
        </ChartSeriesCollection>
    </SfChart>

    <SfChart Title="Humidity %">
        <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.DateTime" Format="@DateTimeFormat" EdgeLabelPlacement="EdgeLabelPlacement.Shift">
            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
        </ChartPrimaryXAxis>

        <ChartPrimaryYAxis Minimum="@MinHum" Maximum="@MaxHum" Interval="2" EdgeLabelPlacement="EdgeLabelPlacement.Shift" LabelFormat="{value} %" />

        <ChartSeriesCollection>
            <ChartSeries DataSource="@FilteredTelemetryData" XName="Time" YName="Humidity" Type="ChartSeriesType.Line">
                <ChartMarker Visible="true" Height="3" Width="3" IsFilled="true" Shape="ChartShape.Circle" />
            </ChartSeries>
        </ChartSeriesCollection>
    </SfChart>
</div>
